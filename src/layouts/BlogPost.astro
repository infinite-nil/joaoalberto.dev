---
import "@fontsource/inter";
import "../styles/article.css";
import BaseLayout from "./BaseLayout.astro";
import TextSmall from "../components/TextSmall.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, heroImage },
} = Astro.props;
---

<BaseLayout title={title} description={description}>
  {pubDate && <TextSmall>{pubDate}</TextSmall>}
  <main class="mt-16">
    <article class="article">
      {
        heroImage && (
          <img
            alt={`${title} - ${description}`}
            class="w-full h-auto my-8"
            height={360}
            loading="lazy"
            src={heroImage}
            width={720}
          />
        )
      }
      <slot />
    </article>
  </main>
</BaseLayout>
